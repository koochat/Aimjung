@section Scripts{
    <script>
        $(document).ready(function () {
            $('#sidebar').on('mouseover', function () {
                $(this).removeClass('active');
            });

            $('#sidebar').on('mouseleave', function () {
                $(this).addClass('active');
            });
        });
    </script>    
}